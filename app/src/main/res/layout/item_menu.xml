<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_menu_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_30_10"
    android:paddingRight="@dimen/dimen_30_10"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/item_menu_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_bg_menu_icon"
        android:padding="7dp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/item_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_menu_img"
        android:textColor="@color/white" />
</RelativeLayout>