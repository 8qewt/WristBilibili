<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp">

        <cn.luern0313.wristbilibili.widget.CircleImageView
            android:id="@+id/li_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/img_temp" />

        <TextView
            android:id="@+id/li_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/li_head"
            android:text="luern0313"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/li_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/li_name"
            android:layout_below="@+id/li_name"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:text="一天前"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/li_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_head"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="戳我上期视频，教你怎么让支付宝的钱无限" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/li_text"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="1dp"
                android:gravity="center_vertical"
                android:text="1561"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>