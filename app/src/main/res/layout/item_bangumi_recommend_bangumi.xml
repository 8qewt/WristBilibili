<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="1dp"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:paddingTop="1dp">

    <ImageView
        android:id="@+id/item_bgm_recommend_bangumi_img"
        android:layout_width="68dp"
        android:layout_height="44dp"
        android:layout_centerVertical="false"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_vid" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/item_bgm_recommend_bangumi_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_bgm_recommend_bangumi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_44"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/item_bgm_recommend_bangumi_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_bgm_recommend_bangumi_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_bgm_recommend_bangumi_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_bgm_recommend_bangumi_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_bgm_recommend_bangumi_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_bgm_recommend_bangumi_info"
            android:layout_toLeftOf="@+id/item_bgm_recommend_bangumi_score"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_bgm_recommend_bangumi_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_bgm_recommend_bangumi_new"
            android:layout_alignParentRight="true"
            android:paddingLeft="2dp"
            android:textColor="@color/orange"
            android:textSize="13sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</RelativeLayout>