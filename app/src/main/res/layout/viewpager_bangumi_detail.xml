<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="28dp">


            <TextView
                android:id="@+id/bgm_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_44" />

            <cn.luern0313.wristbilibili.widget.AutoLineLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="clickBangumiDetail">

                <TextView
                    android:id="@+id/bgm_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bgm_detail_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bgm_detail_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bgm_detail_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bgm_detail_needvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情 >"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </cn.luern0313.wristbilibili.widget.AutoLineLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="2dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_horizontal"
                        android:onClick="clickBangumiFollow"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/bgm_detail_bt_follow"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_vdd_do_follow_no" />

                        <TextView
                            android:id="@+id/bgm_detail_bt_follow_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="追番"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_horizontal"
                        android:onClick="clickBangumiCover"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_vdd_play_cover" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="查看封面"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_horizontal"
                        android:onClick="clickBangumiDownload"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_vdd_play_download" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="缓存"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_horizontal"
                        android:onClick="clickBangumiShare"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_vdd_play_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="转发"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/bgm_detail_video_part_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="21dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/bgm_detail_video_part_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/gray_44"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bgm_detail_video_part_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clickBangumiMorePart"
                        android:text="查看全部>"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bgm_detail_video_part"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:scrollbars="none"
                    android:divider="@color/alpha"
                    android:dividerPadding="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bgm_detail_video_other_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="21dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/bgm_detail_video_other_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/gray_44"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bgm_detail_video_other_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clickBangumiMoreOther"
                        android:text="查看全部>"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bgm_detail_video_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:scrollbars="none"
                    android:divider="@color/alpha"
                    android:dividerPadding="4dp" />

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/bgm_detail_video_season_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:clipToPadding="false"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/bgm_detail_video_season"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="@color/alpha"
                    android:dividerPadding="4dp"
                    android:orientation="horizontal" />

            </HorizontalScrollView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bgm_detail_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tipBG"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="  加载中..."
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>