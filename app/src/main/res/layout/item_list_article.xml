<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_article_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:divider="@drawable/shape_divider_4"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_18_10"
    android:paddingTop="6dp"
    android:paddingRight="@dimen/dimen_18_10"
    android:paddingBottom="6dp"
    android:showDividers="middle"
    tools:ignore="RtlSymmetry,SmallSp,ContentDescription">

        <TextView
            android:id="@+id/item_list_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="B站已公布购买的5部四月新番！"
            android:textColor="@color/gray_22"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_list_article_img_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintDimensionRatio="19:6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/shape_divider_2"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <ImageView
                        android:id="@+id/item_list_article_img_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_vid" />

                    <ImageView
                        android:id="@+id/item_list_article_img_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_vid" />

                    <ImageView
                        android:id="@+id/item_list_article_img_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_vid" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/item_list_article_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="专栏基础功能科普：①文章往左划动可以快速到达UP主上一篇文章；②文章内粉红色字体可以点击传送到指定页面；③右下角点赞上面有一个圆圈，点击可以展开本系列里面的全部文章；④长按右下角点赞可以一键三连。B站已购买的新番聆听者 / LISTENERS  （购买日期：2020年03月20日）动物新世代 / BNA （购买日期：2020年03月19日）格莱普尼尔   （购买日期：2020年03月17日）邪神"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape_divider_4"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/item_list_article_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_list_article_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_list_article_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>