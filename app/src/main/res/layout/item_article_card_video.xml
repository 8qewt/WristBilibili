<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="18dp"
    android:layout_marginBottom="1dp"
    android:descendantFocusability="blocksDescendants"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artcard_video_img_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/artcard_video_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_vid"
                app:layout_constraintDimensionRatio="68:40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/artcard_video_img_lay"
            android:background="@drawable/shape_bg_article_card_video_info"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/artcard_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="撒旦撒"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/artcard_video_danmaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="都十分何"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/artcard_video_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="都十分何"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artcard_video_img_lay"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artcard_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="理他骚得很大帅藕丝"
                android:textColor="@color/gray_44"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/artcard_video_title"
                    android:background="@drawable/shape_bg_article_card_identity"
                    android:paddingStart="2dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="1dp"
                    android:text="视频"
                    android:textColor="@color/mainColor"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/vid_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/artcard_video_title"
                    android:layout_marginStart="4dp"
                    android:text="雕塑湖底"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>