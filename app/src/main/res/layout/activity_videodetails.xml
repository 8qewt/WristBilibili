<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/vd_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/vd_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="视频"
            android:textColor="@color/textColor" />

        <ImageView
            android:id="@+id/vd_title_extraicon"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/vd_title_title"
            android:rotation="90"
            android:src="@drawable/icon_extra" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="34dp">


            <TextView
                android:id="@+id/vd_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="6dp"
                android:text="保加利亚妖王AZIS  MV视频合辑"
                android:textColor="@color/textcolor3" />

            <TextView
                android:id="@+id/vd_video_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="播放:156.1万  弹幕:1548"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/vd_video_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2011-11-09 22:55  AV170001"
                android:textSize="11sp" />

            <cn.carbs.android.expandabletextview.library.ExpandableTextView
                android:id="@+id/vd_video_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="6dp"
                android:text="sina 保加利亚超级天王 Azis1999年出道。他的音乐融合保加利亚名族曲风chalga和pop、rap等元素，不过他惊艳的易装秀与浮夸的角色诠释才是他最为出名的地方 Azis与众多保加利亚天王天后级歌手都有过合作."
                android:textSize="13sp"
                app:etv_MaxLinesOnShrink="3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_play" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="手机扫码"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_later" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="稍后再看"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_histoty" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="历史纪录"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/vd_like"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_like_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_like_no" />

                            <TextView
                                android:id="@+id/vd_like_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="好评"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_coin"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_coin_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_coin_no" />

                            <TextView
                                android:id="@+id/vd_coin_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="投币"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_fav"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_fav_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_fav_no" />

                            <TextView
                                android:id="@+id/vd_fav_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="收藏"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_dislike"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_dislike_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_dislike_no" />

                            <TextView
                                android:id="@+id/vd_dislike_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="差评"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/vd_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/vd_card_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/vd_card_head"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_default_animation" />

                    <TextView
                        android:id="@+id/vd_card_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_anre_followbg"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="4dp"
                        android:text="+关注"
                        android:textColor="@color/textColor"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/vd_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_toLeftOf="@+id/vd_card_button"
                        android:layout_toRightOf="@+id/vd_card_head"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="luern0313"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vd_card_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vd_card_name"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/vd_card_head"
                        android:background="@drawable/shape_lvbg_fme"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:text="LV6"
                        android:textColor="@color/textcolor3"
                        android:textSize="8sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/vd_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout"
        android:background="@color/textColor"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/anim_loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中. . ."
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vd_noweb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout"
        android:background="@color/textColor"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/img_noweb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败\n可能是没有网络？"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>
