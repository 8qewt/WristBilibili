<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/vd_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/vd_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="视频"
            android:textColor="@color/textColor" />

        <ImageView
            android:id="@+id/vd_title_extraicon"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/vd_title_title"
            android:rotation="90"
            android:src="@drawable/icon_extra" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="28dp">


            <TextView
                android:id="@+id/vd_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/textcolor3" />

            <TextView
                android:id="@+id/vd_video_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/vd_video_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp" />

            <cn.carbs.android.expandabletextview.library.ExpandableTextView
                android:id="@+id/vd_video_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                app:etv_MaxLinesOnShrink="5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickCover"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_cover" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="查看封面"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickPlay"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_play" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="手机扫码"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickCoverLater"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_later" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="稍后再看"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="22dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickHistory"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_play_histoty" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="历史纪录"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/vd_like"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickLike"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_like_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_like_no" />

                            <TextView
                                android:id="@+id/vd_like_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="好评"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_coin"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickCoin"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_coin_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_coin_no" />

                            <TextView
                                android:id="@+id/vd_coin_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="投币"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_fav"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickFav"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_fav_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_fav_no" />

                            <TextView
                                android:id="@+id/vd_fav_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="收藏"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vd_dislike"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="22dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:gravity="center_horizontal"
                            android:onClick="clickDislike"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/vd_dislike_img"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_vdd_do_dislike_no" />

                            <TextView
                                android:id="@+id/vd_dislike_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="差评"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/vd_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/vd_card_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/vd_card_head"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_default_animation" />

                    <TextView
                        android:id="@+id/vd_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/vd_card_head"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/textcolor3"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vd_card_sen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vd_card_name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_toRightOf="@+id/vd_card_head"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/textcolor3"
                        android:textSize="10sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/vd_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout"
        android:background="@color/textColor"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/vd_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中. . ."
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vd_noweb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout"
        android:background="@color/textColor"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/img_noweb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败\n可能是没有网络？"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vd_novideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vd_title_layout"
        android:background="@color/textColor"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/img_videonotfound" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频不见了. . .\n可能是没有登录？"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>
