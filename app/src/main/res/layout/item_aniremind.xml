<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anre_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/anre_imgc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/anre_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/img_default_animation" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/anre_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/anre_imgc" />

    <TextView
        android:id="@+id/anre_isfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anre_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/anre_imgc"
        android:background="@drawable/shape_bg_anre_followbg"
        android:paddingBottom="1dp"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="1dp"
        android:text="已追番"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/anre_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anre_isfollow"
        android:layout_toRightOf="@+id/anre_imgc"
        android:textColor="?attr/colorAccent"
        android:textSize="11sp"
        tools:text="12:00" />

    <TextView
        android:id="@+id/anre_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anre_last"
        android:layout_toRightOf="@+id/anre_imgc"
        android:textSize="11sp" />
</RelativeLayout>