<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lisv_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/img_default_head" />

        <TextView
            android:id="@+id/lisv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/lisv_head"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lisv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lisv_name"
            android:layout_below="@+id/lisv_name"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:textSize="10sp" />

        <cn.carbs.android.expandabletextview.library.ExpandableTextView
            android:id="@+id/lisv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lisv_head"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:etv_MaxLinesOnShrink="4" />


        <RelativeLayout
            android:id="@+id/lisv_share_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lisv_text"
            android:background="@drawable/selector_share"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/lisv_share_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lisv_share_head"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/img_default_head" />

                <TextView
                    android:id="@+id/lisv_share_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/lisv_share_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/lisv_share_user"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_vid" />

            <TextView
                android:id="@+id/lisv_share_imgtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lisv_share_img"
                android:layout_margin="4dp"
                android:background="@drawable/shape_dynamic_videotext"
                android:padding="2dp"
                android:textColor="@color/textColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/lisv_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lisv_share_img"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="13sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lisv_share_lay"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/icon_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lisv_replybu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/icon_reply" />

                <TextView
                    android:id="@+id/lisv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lisv_likebu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lisv_likei"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/icon_like" />

                <TextView
                    android:id="@+id/lisv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>