<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/li_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/img_temp" />

        <TextView
            android:id="@+id/li_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/li_head"
            android:text="luern0313"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/li_updown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/li_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="投稿了视频" />

        <TextView
            android:id="@+id/li_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/li_name"
            android:layout_below="@+id/li_name"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:text="一天前"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/li_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_head"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="走过路过的看一看，教你怎么让支付宝的钱无限" />

        <ImageView
            android:id="@+id/il_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_text"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_tail" />

        <TextView
            android:id="@+id/il_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/il_img"
            android:layout_margin="4dp"
            android:background="#55000000"
            android:padding="1dp"
            android:text="07:45  946.4万观看"
            android:textColor="@color/textColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/il_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/il_img"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="教你怎么让支付宝的钱无限"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/il_title"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="1dp"
                android:gravity="center_vertical"
                android:text="1561"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>