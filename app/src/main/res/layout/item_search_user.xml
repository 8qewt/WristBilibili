<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_search_user_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="@dimen/dimen_19_10"
    android:paddingTop="1dp"
    android:paddingRight="@dimen/dimen_19_10"
    android:paddingBottom="1dp"
    tools:ignore="SmallSp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_user_face"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_default_head" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_user_ver_1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/item_search_user_face"
        android:layout_alignEnd="@+id/item_search_user_face"
        android:layout_marginBottom="-2dp"
        android:layout_marginEnd="-2dp"
        android:src="@drawable/icon_ou_ver_1"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_user_ver_2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/item_search_user_face"
        android:layout_alignEnd="@+id/item_search_user_face"
        android:layout_marginBottom="-2dp"
        android:layout_marginEnd="-2dp"
        android:src="@drawable/icon_ou_ver_2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_search_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_search_user_face"
        android:textColor="?attr/colorTitle"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="用户名" />

    <TextView
        android:id="@+id/item_search_user_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_user_name"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_search_user_face"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?attr/colorTitle"
        android:textSize="11sp"
        tools:text="签名" />

    <TextView
        android:id="@+id/item_search_user_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_user_sign"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_search_user_face"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="10sp"
        tools:text="介绍" />

</RelativeLayout>