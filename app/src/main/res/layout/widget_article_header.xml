<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/article_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_44"
        android:textStyle="bold"/>

    <cn.luern0313.wristbilibili.widget.AutoLineLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="4dp"
        android:paddingRight="25dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/article_article_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/article_article_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/article_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/article_article_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:textSize="12sp"/>

    </cn.luern0313.wristbilibili.widget.AutoLineLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/article_article_bt_cover"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/icon_vdd_play_cover" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="查看封面"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/article_article_bt_like"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/article_article_bt_like_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/icon_vdd_do_like_no" />

                <TextView
                    android:id="@+id/article_article_bt_like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="点赞"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/article_article_bt_coin"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/article_article_bt_coin_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/icon_vdd_do_coin_no" />

                <TextView
                    android:id="@+id/article_article_bt_coin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="投币"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/article_article_bt_fav"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/article_article_bt_fav_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/icon_vdd_do_fav_no" />

                <TextView
                    android:id="@+id/article_article_bt_fav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="收藏"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/article_article_bt_share"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/icon_vdd_play_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="转发"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>